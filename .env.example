# ================================================================
# Environment Variables Template for Deployment
# ================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ----------------------------------------------------------------
# Application Settings
# ----------------------------------------------------------------
APP_NAME=Backend API
DEBUG=False

# ----------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------
# PostgreSQL Connection
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=backend_db
DB_PORT=5432

# ----------------------------------------------------------------
# Security & Authentication
# ----------------------------------------------------------------
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
# Or run: make secret
SECRET_KEY=your_secret_key_here_generate_with_make_secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ----------------------------------------------------------------
# Service Ports
# ----------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=8000
REDIS_PORT=6379
PGADMIN_PORT=5050

# ----------------------------------------------------------------
# CORS Settings
# ----------------------------------------------------------------
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# ----------------------------------------------------------------
# Backend Configuration
# ----------------------------------------------------------------
BACKEND_WORKERS=4
LOG_LEVEL=info

# ----------------------------------------------------------------
# Frontend Configuration
# ----------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# ----------------------------------------------------------------
# Container Image Versions (Production)
# ----------------------------------------------------------------
# These will be pulled from GitHub Container Registry
BACKEND_VERSION=latest
FRONTEND_VERSION=latest
WORKER_VERSION=latest

# ----------------------------------------------------------------
# pgAdmin (Development Only)
# ----------------------------------------------------------------
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=admin

# ----------------------------------------------------------------
# Google OAuth (Optional)
# ----------------------------------------------------------------
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ----------------------------------------------------------------
# OpenStack Configuration (Optional)
# ----------------------------------------------------------------
OS_AUTH_URL=
OS_PROJECT_ID=
OS_PROJECT_NAME=
OS_USER_DOMAIN_NAME=Default
OS_USERNAME=
OS_PASSWORD=
OS_REGION_NAME=
